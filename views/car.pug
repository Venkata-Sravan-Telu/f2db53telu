extends layout

block content
  h1= title
  - 
   let results =[
      {
        "car_name": "Ford Focus",
        "car_price": 6000,
        "car_model": 2012
      },
      {
        "car_name": "Chevrolet Malibu",
        "car_price": 6500,
        "car_model": 2013
      },
      {
        "car_name": "Toyoto Camry",
        "car_price": 26000,
        "car_model": 2022
      },
      {
        "car_name": "Hyundai Elantra",
        "car_price": 6500,
        "car_model": 2013
      },
      {
        "car_name": "Chevrolet Cruze",
        "car_price": 4250,
        "car_model": 2012
      }
    ]
  .container-fluid 
    .row 
    .m-1
      each value,key in results
        - let destination = `dispatch(\"/car/update?id=${value._id}\")`
        div(class="col-sm-2" onclick=`buy(${key})`) 
            = value.car_name+" "+value.car_price+"  "+value.car_model
            br
        button.btn( class="btn-sm btn-outline-white btn-success  ml-1", onclick= destination) To Update Records
   
  script. 
    function dispatch(path){ 
      window.location.href=path 
    } 
  script.
    function buy(index){
      alert("You purchased item "+index)
    }