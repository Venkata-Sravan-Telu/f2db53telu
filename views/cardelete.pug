extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let carid = toShow._id 
    - let car_name = toShow.car_name 
    - let car_price = toShow.car_price 
    - let car_model = toShow.car_model 
    - let actionid = "/resource/car/" + carid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='carAttr mr-3') Car ID is: 
        div #{carid} 
      div.row 
        div(class='carAttr mr-3') Car Name is: 
        div #{car_name} 
      div.row 
        div(class='carAttr mr-3') Car price is: 
        div #{car_price} 
      div.row 
        div(class='carAttr mr-3') Car model is: 
        div #{car_model} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the car collection 
      window.location.href='/car' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'      
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/car' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 